# Database Connection Environment Variables
# Copy this file to .env and update with your actual values

# Database Server Configuration
DB_SERVER=localhost
# DB_SERVER=myserver.database.windows.net  # For Azure SQL

# Database Connection Details
DB_DATABASE=TestDatabase
DB_USERNAME=sa
DB_PASSWORD=YourPassword123!
DB_PORT=1433

# OR use a complete connection string instead of individual parameters
# DB_CONNECTION_STRING=Driver={ODBC Driver 18 for SQL Server};Server=localhost,1433;Database=TestDatabase;Uid=sa;Pwd=YourPassword123!;Encrypt=yes;TrustServerCertificate=yes;Connection Timeout=30;

# Schema Configuration
DB_SCHEMA=dbo
DB_TABLE_BEHAVIOR=create_if_not_exists
DB_TABLE_PREFIX=pii_

# Data Insertion Configuration
DB_INSERT_MODE=append
DB_BATCH_SIZE=1000